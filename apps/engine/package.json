{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm",
    "start": "node dist/index.js",
    "dev": "tsup src/index.ts --format cjs --watch --onSuccess \"node dist/index.js\"",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
